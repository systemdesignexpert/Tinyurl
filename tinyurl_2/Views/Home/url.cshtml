    <h2 class="yellow-text" color=yellow;>URL Shortner </h2>
    <form asp-controller="Home" asp-action="getTinyUrl">
        <textarea name="url" cols="30" rows="2" placeholder="https://www.google.com" style="align-content: center; overflow: auto; border: 3px outset #0af25b; "></textarea>
        <br /><br />
        <input type="SUBMIT" />
    </form>

