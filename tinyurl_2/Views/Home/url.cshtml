@{
    ViewData["Title"] = "Home Page";
}

<style>
    input[type=SUBMIT] {
        background-color: #04AA6D;
        border: none;
        color: white;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }

    h2.yellow-text {
        color: yellow;
    }
    img.center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
